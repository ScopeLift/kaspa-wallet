{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "*": ["./types/*", "src/*"]
    }
  },
  "include": ["src/**/*", "src-pwa/**/*"],
  "exclude": ["./node_modules", "test/**/*", "types"]
}
