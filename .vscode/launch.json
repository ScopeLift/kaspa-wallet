  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest single run a test",
      "cwd": "${workspaceRoot}/",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "env": { "CI": "true" },
      "args": ["-c", "./jest.config.js", "--verbose", "-i", "--no-cache", "Api.helpers"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
